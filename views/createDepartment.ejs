<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
</head>
<style>
    * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
    }

    body {
        font-family: -apple-system, BlinkMacSystemFont, 'Inter', 'Segoe UI', sans-serif;
        background: #f8f9fa;
        min-height: 100vh;
        padding: 48px 24px;
        color: #1a1a1a;
    }

    #search {
        width: 100%;
        max-width: 1200px;
        margin: 0 auto 32px;
        display: block;
        padding: 14px 18px;
        font-size: 15px;
        border: 1px solid #e5e7eb;
        border-radius: 8px;
        background: white;
        color: #1a1a1a;
        transition: all 0.2s ease;
    }

    #search:focus {
        outline: none;
        border-color: #9ca3af;
    }

    #search::placeholder {
        color: #9ca3af;
    }

    form {
        max-width: 1200px;
        margin: 0 auto 32px;
        background: white;
        padding: 32px;
        border-radius: 12px;
        border: 1px solid #e5e7eb;
        display: flex;
        gap: 16px;
        align-items: flex-end;
        flex-wrap: wrap;
    }

    form > input[type="text"] {
        padding: 12px 14px;
        border: 1px solid #e5e7eb;
        border-radius: 8px;
        font-size: 14px;
        color: #1a1a1a;
        transition: all 0.2s ease;
        flex: 1;
        min-width: 180px;
    }

    form > input[type="text"]:focus {
        outline: none;
        border-color: #9ca3af;
    }

    form::before {
        content: 'Name';
        font-weight: 500;
        color: #6b7280;
        font-size: 13px;
        letter-spacing: 0.3px;
        position: absolute;
        margin-top: -24px;
    }

    form > input[type="text"]:nth-of-type(1) {
        position: relative;
    }

    form > input[type="text"]:nth-of-type(1)::before {
        content: 'Name';
        font-weight: 500;
        color: #6b7280;
        font-size: 13px;
        letter-spacing: 0.3px;
        position: absolute;
        top: -24px;
        left: 0;
    }

    form > input[type="text"]:nth-of-type(2)::before {
        content: 'Type';
        font-weight: 500;
        color: #6b7280;
        font-size: 13px;
        letter-spacing: 0.3px;
        position: absolute;
        top: -24px;
        left: 0;
    }

    form > input[type="text"]:nth-of-type(3)::before {
        content: 'Address';
        font-weight: 500;
        color: #6b7280;
        font-size: 13px;
        letter-spacing: 0.3px;
        position: absolute;
        top: -24px;
        left: 0;
    }

    form > button {
        padding: 12px 24px;
        background: #1a1a1a;
        color: white;
        border: none;
        border-radius: 8px;
        font-size: 14px;
        font-weight: 500;
        cursor: pointer;
        transition: all 0.2s ease;
        flex-shrink: 0;
    }

    form > button:hover {
        background: #374151;
    }

    table {
        width: 100%;
        max-width: 1200px;
        margin: 0 auto 32px;
        background: white;
        border-radius: 12px;
        overflow: hidden;
        border: 1px solid #e5e7eb;
        border-collapse: collapse;
    }

    thead {
        background: #fafafa;
        border-bottom: 1px solid #e5e7eb;
    }

    thead tr th {
        color: #6b7280;
        padding: 16px 20px;
        text-align: left;
        font-weight: 600;
        font-size: 13px;
        letter-spacing: 0.5px;
        text-transform: uppercase;
        border: none;
    }

    tbody tr {
        border-bottom: 1px solid #f3f4f6;
        transition: all 0.15s ease;
    }

    tbody tr:hover {
        background: #f9fafb;
    }

    tbody tr:last-child {
        border-bottom: none;
    }

    tbody td {
        padding: 16px 20px;
        color: #1a1a1a;
        font-size: 14px;
        border: none;
    }

    tbody td:nth-child(3) {
        display: flex;
        gap: 8px;
        align-items: center;
    }

    tbody td a {
        text-decoration: none;
        padding: 6px 14px;
        border-radius: 6px;
        font-weight: 500;
        font-size: 13px;
        transition: all 0.2s ease;
        display: inline-block;
    }

    tbody td a[href*="edit"] {
        background: #f3f4f6;
        color: #1a1a1a;
        border: 1px solid #e5e7eb;
    }

    tbody td a[href*="edit"]:hover {
        background: #e5e7eb;
        border-color: #d1d5db;
    }

    tbody td a[href*="delete"] {
        background: #fee;
        color: #dc2626;
        border: 1px solid #fecaca;
    }

    tbody td a[href*="delete"]:hover {
        background: #fecaca;
        border-color: #fca5a5;
    }

    body > a {
        display: inline-block;
        padding: 10px 20px;
        margin: 0 6px;
        background: white;
        color: #1a1a1a;
        text-decoration: none;
        border-radius: 8px;
        font-weight: 500;
        font-size: 14px;
        transition: all 0.2s ease;
        border: 1px solid #e5e7eb;
    }

    body > a:hover {
        background: #f9fafb;
        border-color: #d1d5db;
    }

    body > a:first-of-type {
        margin-left: calc(50% - 600px);
    }

    @media (max-width: 768px) {
        body {
            padding: 24px 16px;
        }

        form {
            flex-direction: column;
            padding: 24px;
        }

        form > input[type="text"] {
            width: 100%;
        }

        form > button {
            width: 100%;
        }

        table {
            font-size: 13px;
        }

        thead tr th {
            padding: 12px 16px;
            font-size: 12px;
        }

        tbody td {
            padding: 12px 16px;
            font-size: 13px;
        }

        tbody td:nth-child(3) {
            flex-direction: column;
            gap: 6px;
            align-items: stretch;
        }

        tbody td a {
            width: 100%;
            text-align: center;
        }

        body > a:first-of-type {
            margin-left: 6px;
        }
    }

    @media (max-width: 480px) {
        body {
            padding: 20px 12px;
        }

        table {
            display: block;
            overflow-x: auto;
            white-space: nowrap;
        }
    }
</style>
<body>
    <input type="text" placeholder="Search department by name" id="search">
    <form action="/department/add" method="post">
        Name:<input type="text" name="name">
        Type:<input type="text" name="type">
        Address:<input type="text" name="address">
        <button type="submit">Add</button>
    </form>
    <table border="1">
        <thead>
            <tr>
                <th>Name</th>
                <th>Type</th>
                <th>Actions</th>
                <th>Number of Users</th>
            </tr>
        </thead>
        <tbody>
    <% data.forEach((val)=>{ %>
        <tr>
         <td><%= val.name %></td>
         <td><%= val.type %></td>
         <td><a href="/department/edit/<%= val._id %>">Edit</a> <a href="/department/delete/<%= val._id %>">Delete</a></td>
         <td><%= val.users %></td>
        </tr>
    <% }) %>
        </tbody>
    </table>
    <a href="/department/list?page=<%= currPage-1 %>">prev</a>  <a href="/department/list?page=<%= currPage+1 %>">next</a>
</body>
<script>
 document.getElementById("search").addEventListener("input",()=>
 {
    fetch('/filterDepartment',{
        method:"POST",
        headers:{'Content-Type':'application/json'},
        body:JSON.stringify({data:document.getElementById("search").value})
    })
    .then((res)=>res.json())
    .then((data)=>
{
    document.querySelector('tbody').innerHTML=""
    data.data.forEach((val)=>
{
    let tr=document.createElement("tr")
    let name=document.createElement("td");
    let type=document.createElement("td");
    let address=document.createElement("td");
    let actions=document.createElement("td")
    let edit=document.createElement('a')
    let remove=document.createElement("a")
    let users=document.createElement("td")
    name.innerText=val.name
    type.innerText=val.type
    address.innerText=val.address
    users.innerText=val.users || 0
    edit.innerText="edit"
    remove.innerText="remove"
    edit.href=`/editDepartment/${val._id}`
    remove.href=`/deleteDepartment/${val._id}`
    actions.append(edit)
    actions.append(remove)
    tr.append(name)
    tr.append(type)
    tr.append(actions)
    tr.append(users)
    document.querySelector('tbody').append(tr)
})
})
 })
</script>
</html>