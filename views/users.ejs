<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
</head>
<style>
    * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
    }

    body {
        font-family: -apple-system, BlinkMacSystemFont, 'Inter', 'Segoe UI', sans-serif;
        background: #f8f9fa;
        min-height: 100vh;
        padding: 48px 24px;
        color: #1a1a1a;
    }

    table {
        width: 100%;
        max-width: 1200px;
        margin: 0 auto 32px;
        background: white;
        border-radius: 12px;
        overflow: hidden;
        border: 1px solid #e5e7eb;
        border-collapse: collapse;
    }

    thead {
        background: #fafafa;
        border-bottom: 1px solid #e5e7eb;
    }

    thead tr th {
        color: #6b7280;
        padding: 16px 20px;
        text-align: left;
        font-weight: 600;
        font-size: 13px;
        letter-spacing: 0.5px;
        text-transform: uppercase;
        border: none;
    }

    tbody tr {
        border-bottom: 1px solid #f3f4f6;
        transition: all 0.15s ease;
    }

    tbody tr:hover {
        background: #f9fafb;
    }

    tbody tr:last-child {
        border-bottom: none;
    }

    tbody td {
        padding: 16px 20px;
        color: #1a1a1a;
        font-size: 14px;
        border: none;
    }

    tbody td:last-child {
        display: flex;
        gap: 8px;
        align-items: center;
    }

    tbody td a {
        text-decoration: none;
        padding: 6px 14px;
        border-radius: 6px;
        font-weight: 500;
        font-size: 13px;
        transition: all 0.2s ease;
        display: inline-block;
    }

    tbody td a[href*="edit"] {
        background: #f3f4f6;
        color: #1a1a1a;
        border: 1px solid #e5e7eb;
    }

    tbody td a[href*="edit"]:hover {
        background: #e5e7eb;
        border-color: #d1d5db;
    }

    tbody td a[href*="delete"] {
        background: #fee;
        color: #dc2626;
        border: 1px solid #fecaca;
    }

    tbody td a[href*="delete"]:hover {
        background: #fecaca;
        border-color: #fca5a5;
    }

    body > a {
        display: inline-block;
        padding: 10px 20px;
        margin: 0 6px;
        background: white;
        color: #1a1a1a;
        text-decoration: none;
        border-radius: 8px;
        font-weight: 500;
        font-size: 14px;
        transition: all 0.2s ease;
        border: 1px solid #e5e7eb;
    }

    body > a:hover {
        background: #f9fafb;
        border-color: #d1d5db;
    }

    body > a:first-of-type {
        margin-left: calc(50% - 600px);
    }

    @media (max-width: 768px) {
        body {
            padding: 24px 16px;
        }

        table {
            font-size: 13px;
        }

        thead tr th {
            padding: 12px 16px;
            font-size: 12px;
        }

        tbody td {
            padding: 12px 16px;
            font-size: 13px;
        }

        tbody td:last-child {
            flex-direction: column;
            gap: 6px;
            align-items: stretch;
        }

        tbody td a {
            width: 100%;
            text-align: center;
        }

        body > a:first-of-type {
            margin-left: 6px;
        }
    }

    @media (max-width: 480px) {
        body {
            padding: 20px 12px;
        }

        table {
            display: block;
            overflow-x: auto;
            white-space: nowrap;
        }
    }
</style>
<body>
        <table border="1">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Email</th>
                    <th>Role</th>
                    <th>Department</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                <% data.forEach((val)=> { %>
                   <tr>
                    <td><%= val.name %></td>
                    <td><%= val.email %></td>
                    <td><%= val.role %></td>
                    <td><%= val.dept %></td>
                    <td><a href="/users/edit/<%= val._id %>">Edit</a>  <a href="/users/delete/<%= val._id %>">Delete</a></td>
                   </tr>
                <% }) %>
            </tbody>
        </table>
        <a href="/users/list?page=<%= currPage-1 %>">prev</a>  <a href="/users/list?page=<%= currPage+1 %>">next</a>
</body>
</html>